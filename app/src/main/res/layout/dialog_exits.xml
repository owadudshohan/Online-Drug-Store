<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_bag"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:text="Do you want to close Pharmacy Online?"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pharmacy_logo"
            android:textSize="@dimen/m_txt"
            android:textColor="@color/d_green"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/lin_cncl"

            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/btn_de_cncl"
                android:layout_width="0dp"
                android:foreground="@drawable/ripple"
                android:clickable="true"
                android:layout_margin="7dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/n_txt"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"

                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/btn_exit"
                android:layout_width="0dp"
                android:foreground="@drawable/ripple"
                android:clickable="true"
                android:layout_margin="7dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/d_green"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/n_txt"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>