<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pharmacy_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pharmacy_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineDrugStore"
        tools:targetApi="31">
        <activity
            android:name="com.app.onlinepharmecy.CartActivity"
            android:exported="false" />
        <activity
            android:name="com.app.onlinepharmecy.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.app.onlinepharmecy.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.onlinepharmecy.SignUp"
            android:exported="false" />
        <activity
            android:name="com.app.onlinepharmecy.SignIn"
            android:exported="true" />
    </application>

</manifest>